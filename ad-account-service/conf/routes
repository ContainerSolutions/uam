# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                       controllers.AdMicroservice.index()
GET     /accounts               controllers.AdMicroservice.getAccounts()
GET     /account/:id            controllers.AdMicroservice.getAccount(id: String)
POST    /account                controllers.AdMicroservice.addAccount()
DELETE  /account                controllers.AdMicroservice.deleteAccount()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file           controllers.Assets.versioned(path="/public", file: Asset)
