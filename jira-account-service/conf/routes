# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /accounts                   controllers.Application.getAll()
GET     /account/:id                controllers.Application.get(id: String)
POST    /account                    controllers.Application.post()
DELETE  /account/:id                controllers.Application.delete(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
